
@import "nib"
@import "../includes/config.styl"

.bklogin
	padding: 100px 0px 80px 0px
		
	&__titulo
		text-align: center
		
	&__info
		color: crgb(ccAzul2)
		text-align: center
	
	&__form
		display: block
		background-color: crgb(ccAzul2)
		border-radius: 10px
		padding: 26px
		font-size: 16px
		max-width: 400px
		margin: 20px auto
		box-shadow: 1px 1px 3px black
		
		input
			box-sizing: border-box
			display: block
			padding: 4px 6px
			width: 100%
		
		input[type=text],input[type=password],input[type=email]
			background-color: white
			color: black
			margin-bottom: 10px
			&:focus
				outline: none
				border: 2px solid black
				border-color: crgb(ccAmarillo1)
			
		input[type=submit]
			font-weight: bold