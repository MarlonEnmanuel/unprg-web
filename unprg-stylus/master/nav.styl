@import "nib"
	
.bknav
	position: absolute
	box-shadow: 0px 2px 8px 0px rgba(0,0,0,0.8)
	background-color: crgba(ccAzul2,0.92)
	z-index: 10
	height: 38px
	*
		box-sizing: border-box
		
	&__wraper
		height: 100%
		
	&--stiky //propiedades de menu pegajoso
		left: 0px
		position: fixed
		right: 0px
		top: -1px
		.bknav__up
			display: inline-block
		
	

	&__up //boton para regresar al encabezado
		position: absolute
		left: 0
		top: 0
		height: 100%
		display: none
		color: white
		@media all and (max-width: 940px)
			display: inline-block
		&__bu
			font-size: 2.4em
			height: 100%
			span
				line-height: 40px

	&__icons
		position: absolute
		right: 0
		top: 0
		height: 100%
			
		&__bu
			height: 100%
			color: white
			font-size: 2em
			margin-left: 1.4em
			float: left
			transition: all 150ms
			@media all and (max-width: 940px)
				margin-left: 1em
			@media all and (max-width: 820px)
				margin-left: 0.6em
				
			&:hover
				transform: scale(1.1)
			span
				line-height: 38px
			
		.bknav__slide
			display: none
			cursor: pointer
			font-size: 2.4em
			


	ul
		list-style: none
	a
		text-decoration: none
		
	&__ul
		display: block
		height: 100%
		margin-left: 8em
		padding-left: 6px
		@media all and (max-width: 940px)
			margin-left: 4em
			
		&__logo
			display: none
			text-align: center
			padding: 15px 0
			img
				width: 70px
				display: inline-block
		
		&__li
			display: inline-block
			height: 100%
			vertical-align: middle
				
			&__bu
				font-size: 1.6em
				color: white
				cursor: pointer
				display: block
				height: 100%
				line-height: 38px
				padding: 0 1em
				white-space: nowrap
				letter-spacing: 1px
				font-stretch: condensed
				transition: all 100ms
				box-sizing: border-box
				@media all and (max-width: 940px)
					padding: 0 0.6em
				@media all and (max-width: 820px)
					padding: 0 0.4em
			&:hover .bknav__ul__li__bu
				position: relative
				color: crgb(ccAmarillo2)
				transform: scale(1.1)
			&:hover .bknav__sub
				display: block
			&:hover .bknav__sub--single
				display: block
		
		&__sep
			color: white
			display: inline-block
			height: 100%
			vertical-align: middle
			font-size: 1.6em
			line-height: 38px
			
	&__sub
		display: none
		position: absolute
		top: 38px
		left: 0px
		right: 0px
		box-sizing: border-box
		background-color: rgba(255,255,255,0.95)
		box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.4)
		border: 1px solid crgb(ccGris3)
		border-top: none
		border-radius: 0 0 3px 3px
		font-size: 0px
		white-space: nowrap
		padding: 12px 0
			
		&--single
			left: auto
			right: auto
			
		&__col
			&--2
				display: inline-block
				width: 50%
				box-sizing: border-box
				vertical-align: top
			&--3
				display: inline-block
				width: 33.3333333%
				box-sizing: border-box
				vertical-align: top
			&--4
				display: inline-block
				width: 25%
				box-sizing: border-box
				vertical-align: top
			&--5
				display: inline-block
				width: 20%
				box-sizing: border-box
				vertical-align: top
			
				
		&__bu
			display: block
			font-size: 16px
			padding: 5px 12px
			min-width: 200px
			box-sizing: border-box
			color: crgb(ccGris2)
			white-space: normal
			&:hover
				color: crgb(ccAzul2)
				
			&--title
				height: 39px
				display: block
				font-size: 20px
				padding: 8px 12px
				min-width: 200px
				box-sizing: border-box
				font-weight: bold
				color: crgb(ccAzul1)
				font-stretch: condensed
				&:hover
					text-decoration: underline
					
	.single .bknav__sub__bu
		font-weight: bold
		font-size: 15px
		
.bknav__sgw //color diferente para el menu del sistem sgw
	background-color: crgba(ccAzul1,0.92)
					
.mobile
	
	.bknav
		
		&__slide
			display: inline-block
			
		&__icons
			&__bu
				margin-left: 1.5em
			
	
		&__ul
			position: fixed
			display: block
			width: 280px
			box-sizing: border-box
			top: 0px
			left: -300px
			right: auto
			bottom: 0px
			height: auto
			margin-left: 0
			padding-left: 0
			background-color: crgba(ccAzul1,0.97)
			max-width: 75%
			z-index: 11
			box-shadow: 0 0 15px 4px rgba(0,0,0,0.7)
			overflow: auto
			transition: left 200ms
			@media all and (max-width: 940px)
				margin-left: 0
				
			&__logo
				display: block
				
			&__li
				display: block
				height: auto
					
				&__bu
					font-size: 1.6em
					height: auto
					line-height: 38px
					padding: 0.4em 1em
					white-space: normal
					letter-spacing: 0
					font-stretch: normal
					box-sizing: border-box
					border-bottom: 1px solid crgba(ccAzul2,0.38)
					@media all and (max-width: 940px)
						padding: 0.4em 1em
					@media all and (max-width: 820px)
						padding: 0.4em 1em
						
				&:hover .bknav__ul__li__bu
					position: static
					color: crgb(ccAmarillo2)
					transform: none
						
				&:hover .bknav__sub
					display: block
				&:hover .bknav__sub--single
					display: block
			
			&__sep
				display: none
				
				
		&__sub
			width: 100%
			position: static
			top: auto
			left: auto
			right: auto
			background-color: white
			box-shadow: inset 0px 0px 15px 0px rgba(0,0,0,0.75)
			border: none
			border-radius: none
			white-space: normal
			margin: 10px 0
				
			&__col
				&--2
					display: block
					width: 100%
				&--3
					display: block
					width: 100%
				&--4
					display: block
					width: 100%
				&--5
					display: block
					width: 100%
					
			&__bu
				font-size: 14px
				padding: 8px 8px 8px 20px
				white-space: normal
					
				&--title
					white-space: normal
					height: auto
					font-size: 18px
					padding: 8px 8px 8px 20px
					
	.single .bknav__sub__bu
		font-weight: bold
		font-size: 15px
		padding-top: 12px
		padding-bottom: 12px
					
	.show
		left: 0px