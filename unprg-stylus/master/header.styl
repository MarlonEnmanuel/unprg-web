@import "nib"

.bkhdr
	color: crgb(ccGris1)
	border-top: 3px solid crgb(ccAzul3)
	text-align: center
	
	@media all and (max-width: 900px)
		font-size: 9px
	@media all and (max-width: 500px)
		font-size: 8px
	@media all and (max-width: 380px)
		font-size: 7px
	@media all and (max-width: 280px)
		font-size: 6px
			
	
	&__logo
		text-align: left
		padding-top: 14px
		padding-bottom: 14px
		display: block
		@media all and (max-width: 900px)
			margin: 0 auto
		@media all and (max-width: 780px)
			display: inline-block
		
		&__img
			display: inline-block
			vertical-align: middle
			img
				display: block
				height: auto
				vertical-align: middle
				width: 8em
		&__name
			display: inline-block
			margin-left: 16px
			vertical-align: middle
			&__1
				text-transform: uppercase
			&__2
				margin-top: 4px
				
	&__links
		color: crgb(ccGris2)
		float: right
		text-align: center
		position: absolute		
		top: 25px
		right: 0px
		margin-right: 1px
		
		@media all and (max-width: 900px)
			float: none
			position: static
			margin-top: 0.5em
			
		
		&:hover a
			border-left: none !important
		
		a
			display: inline-block
			padding: 2px 10px
			text-decoration: none
			transition: all 0.2s
			margin-top: 1px
			&:hover
				outline: 1px solid crgb(ccGris2) !important
	
	&__buttons
		position: absolute
		right: 0px
		bottom: 1.4em
		box-shadow: 0px 2px 8px 0px rgba(0,0,0,0.5)
		display: inline-block
		
		@media all and (max-width: 900px)
			bottom: 3em			
		@media all and (max-width: 780px)
			display: block
			position: static
			margin-bottom: 1em
		
		a
			background-color: crgb(ccAzul3)
			color: white
			font-weight: bold
			float: left
			display: inline-block
			padding: 1.06em
			text-decoration: none
			transition: all 150ms
			text-transform: uppercase
			@media all and (max-width: 780px)
				box-sizing: border-box
				width: 50%
				padding: 1em 0
				
			&:hover
				transform: scale(1.02)
				box-shadow: 0px 0px 4px 0px rgb(0,0,0)
			&:active
				transform: scale(1.01)
			&:not(:first-child)
				border-left: 1px solid rgba(0,0,0,0.08)

.bkhdr__sgw
	border-top: 3px solid crgb(ccAzul1)
	.bkhdr__buttons a
		background-color: crgb(ccAzul2)
		@media all and (max-width: 780px)
			box-sizing: border-box
			width: 50%
			padding: 1em 0