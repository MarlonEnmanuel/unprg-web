@import "nib"
@import "../includes/config.styl"

.bksgw
		
	&--first
		margin-top: 50px
	
	&
	&--first
	&--nuevo
	&--editar
		.block__wraper
		.block__wraper--slim
			padding: 2em 0
		
	&__titulo
		font-family: font2
		font-size: 2.4em
		padding-bottom: 0.2em
		margin-bottom: 0.5em
		border-bottom: 1px solid crgb(ccGris3)
		color: crgb(ccAzul2)
		
	&__form
		display: block
		color: crgb(ccGris1)
		font-size: 0
		white-space: normal
		
		&__info
			display: block
			color: crgb(ccGris2)
			font-size: 14px
			overflow: hidden
			
		&__status
			display: block
			color: crgb(ccAzul2)
			overflow: hidden
		
		&__hr
			display: block
			width: 100%
			border-bottom: 1px solid crgb(ccGris4)
			margin: 5px 0
			
		.btn--azul
		.btn--amarillo
			font-size: 16px
			padding: 5px 10px
			font-weight: bold
			
		&__el
			display: inline-block
			font-size: 15px
			padding: 8px 10px
			width: 50%
			box-sizing: border-box
			text-align: top
			@media all and (max-width: 800px)
				width: 100%
			&--w
				display: block
				font-size: 15px
				padding: 10px 10px
				width: 100%
				box-sizing: border-box
				text-align: top
		
		label
			display: block
			width: 100%
			padding-bottom: 2px
			font-size: 14px
			font-weight: bold
			
		input, select, textarea
			display: block
			box-sizing: border-box
			width: 100%
			padding: 4px 6px
			border-radius: 3px
			outline: none
			border 1px solid crgb(ccGris3)
			margin: 1px
			
			&:focus
				outline: none
				border: 2px solid crgb(ccAmarillo1)
				margin: 0px
				
		input[type=file]
			border: none
			padding: 4px 0
			
		textarea
			min-width: 100%
			max-width: 100%
			min-height: 32px
		
		input[type=checkbox]
			height: 20px
			vertical-align: top
			
		input[disabled]
			background-color: transparent
			cursor: normal
			border: none
			padding-left: 0
			padding-right: 0
			color: crgb(ccGris2)