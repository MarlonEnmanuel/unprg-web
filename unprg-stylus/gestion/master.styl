@import "nib"
@import "../includes/config.styl"

.bksgw
	padding 2em 0
	
	&--first
		margin-top: 50px
		padding 2em 0
		
	&__titulo
		font-family: font2
		font-size: 2.4em
		padding-bottom: 0.2em
		margin-bottom: 0.5em
		border-bottom: 1px solid crgb(ccGris3)
		color: crgb(ccAzul2)
		
	&__col
		&--1
			width: 50%
			float: left
			box-sizing: border-box
			min-height: 5px
			padding-right: 12px
			@media all and (max-width: 800px)
				width: 100%
		&--2
			width: 50%
			float: left
			box-sizing: border-box
			min-height: 5px
			padding-left: 12px
			@media all and (max-width: 800px)
				width: 100%
		
	&__form
		display: block
		font-size: 15px
		color: crgb(ccGris1)
		padding: 12px
		
		&__info
			overflow: hidden
			display: block
			width: 100%
			color: crgb(ccGris2)
			font-size: 14px
			
		&__status
			overflow: hidden
			display: block
			width: 100%
			color: crgb(ccAzul2)
			font-size: 15px
		
		&__sep
			display: block
			width: 100%
			height: 20px
			clear: both
			
			&--hr
				display: block
				padding-top: 16px
				border-bottom: 2px solid crgb(ccGris4)
				margin-bottom: 16px
				clear: both
			
		.btn--azul
			font-size: 16px
			padding: 5px 10px
			font-weight: bold
		
		label
			display: block
			width: 100%
			padding-bottom: 2px
			font-size: 14px
			font-weight: bold
			
		input, select, textarea
			display: block
			box-sizing: border-box
			width: 100%
			padding: 4px 6px
			border-radius: 3px
			outline: none
			border 1px solid crgb(ccGris3)
			margin: 1px
			
			&:focus
				outline: none
				border: 2px solid crgb(ccAmarillo1)
				margin: 0px
				
		input[type=file]
			border: none
			padding: 4px 0
			
		textarea
			min-width: 100%
			max-width: 100%
			min-height: 32px