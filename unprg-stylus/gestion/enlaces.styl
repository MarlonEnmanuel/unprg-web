@import "nib"
@import "../includes/config.styl"

.sgwenl
	
	&__cont
		font-size: 0px
		
	&__el
		font-size: 10px
		padding: 8px
		display: inline-block
		width: 50%
		box-sizing: border-box
		border: 2px solid white
		border-radius: 5px
		position: relative
		vertical-align: top
		&:hover .sgwenl__el__buttons
			display: block
		
		&__buttons
			display: none
			font-size: 18px
			color: crgb(ccAzul1)
			position: absolute
			top: 0
			right: 0
			span
				display: inline-block
				padding: 6px
				cursor: pointer
		
		&__nombre
			margin-bottom: 6px
			font-size: 15px
			span
				font-size: 0.85em
				display: inline-block
				color: crgb(ccAzul3)
		&__descripcion
			margin-bottom: 4px
			font-size: 13px
		&__link
			display: block
			margin-bottom: 8px
			font-size: 13px
			overflow: hidden
			text-overflow: ellipsis
		&__usuario
			font-size: 13px