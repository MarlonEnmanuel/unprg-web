
@import "nib"
@import "../includes/config.styl"

.bklast
	min-height: 200px
	padding: 2em 0
	
	a
		text-decoration: none
		display: block
	
	&__col
		box-sizing: border-box
		width: 33.33333333%
		padding: 1em
		float: left
		border: 1px solid crgb(ccGris6)
		
		&__titulo
			padding-bottom: 0.2em
			border-bottom: 1px solid crgb(ccGris5)
			
	&__avi
		&__el
			display: block
			padding: 1em 0px
			border-bottom: 1px solid crgb(ccGris5)
			&__text
				display: block
				min-height: 32px
				overflow: hidden
				
			&__fech
				margin-top: 0.4em
					
	&__doc
		&__el
			display: block
			padding: 1em 0px
			border-bottom: 1px solid crgb(ccGris5)
			
			.icon-file-pdf
				display: inline-block
				float: left
				margin-right: 0.2em
				padding-top: 0.04em
				
			&__text
				display: block
				min-height: 32px
				overflow: hidden
				
			&__fech
				margin-top: 0.4em
				
	&__age
		&__el
			display: block
			padding: 1em 0px
			border-bottom: 1px solid crgb(ccGris5)
			
			&__fech
				display: inline-block
				float: left
				margin-right: 1.2em
				padding: 0.5em 1em
				font-size: 9px
				border-radius: 0.2em
				
				&__dia
					font-size: 3.4em
					line-height: 0.6em
				&__mes
					font-size: 1.7em
					margin-bottom: 0.1em
				&__hor
					font-size: 1.8em
					font-stretch: condensed
					font-weight: bold
					
			&__text
				margin-bottom: 0.4em