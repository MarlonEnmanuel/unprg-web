
@import "nib"
@import "../includes/config.styl"

.bklast
	padding: 2em 0
	@media all and (max-width: 780px)
		font-size: 9px
	@media all and (max-width: 640px)
		font-size: 8px
	@media all and (max-width: 420px)
		font-size: 7px
	
	&__error
		display: none
		padding: 40px 0px
	
	a
		text-decoration: none
		display: block
	
	&__col
		box-sizing: border-box
		width: 33.33333333%
		padding: 1em
		float: left
		border: 1px solid crgb(ccGris6)
		
		&__titulo
			padding-bottom: 0.2em
			border-bottom: 1px solid crgb(ccGris5)
			
	&__avi
		@media all and (max-width: 700px)
			width: 50%
		&__el
			display: block
			padding: 1em 0px
			border-bottom: 1px solid crgb(ccGris5)
			cursor: pointer
			&__text
				display: block
				min-height: 2em
				overflow: hidden
				
			&__fech
				margin-top: 0.4em
					
	&__doc
		@media all and (max-width: 700px)
			width: 50%
		&__el
			display: block
			padding: 1em 0px
			border-bottom: 1px solid crgb(ccGris5)
			
			.icon-file-pdf
				display: inline-block
				float: left
				margin-right: 0.2em
				padding-top: 0.04em
				cursor: pointer
				
			&__text
				display: block
				min-height: 2em
				overflow: hidden
				
			&__fech
				margin-top: 0.4em
				
	&__age
		@media all and (max-width: 700px)
			margin-top: 4px
			width: 100%
			
		&__el
			display: block
			padding: 1em 0px
			box-sizing: border-box
			border-bottom: 1px solid crgb(ccGris5)
			
			&__fech
				display: inline-block
				float: left
				margin-right: 1.2em
				padding: 0.8em 1em 0.5em 1em
				font-size: 0.9em
				border-radius: 0.2em
				
				&__dia
					font-size: 3.2em
					line-height: 0.6em
				&__mes
					font-size: 1.8em
					text-shadow: 0 -1px 0.4em black
				&__hor
					font-size: 1.8em
					font-stretch: condensed
					font-weight: bold
					
			&__text
				margin-bottom: 0.4em