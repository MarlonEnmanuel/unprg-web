@import "nib"
	
.bknav
	position: absolute
	box-shadow: 0px 2px 8px 0px rgba(0,0,0,0.8)
	background-color: crgba(ccAzul2,0.92)
	z-index: 100
	

	&--stiky
		left: 0px
		position: fixed
		right: 0px
		top: 0px
		.bknav__up
			display: block
	
	&__up
		display: none
		position: absolute
		top: 0px
		bottom: 0px
		left: 0px
		font-size: 2.5em
		color: white
		&__bu
			display: inline-block
			padding-top: 0.3em

	&__icons
		position: absolute
		top: 0px
		bottom: 0px
		right: 0px
		font-size: 2em
		color: white
		vertical-align: middle
			
		&__bu
			display: inline-block
			padding: 0.4em 0
			margin-left: 1.4em
			float: left
			vertical-align: middle
			transition: all 150ms
			&:hover
				transform: scale(1.1)
			span
				vertical-align: middle
			
		.bknav__slide
			display: none
			cursor: pointer
			display: inline-block
			font-size: 1.2em
			padding-top: 0.18em
			//margin-left: 3em
			

	ul
		list-style: none
		
	a
		text-decoration: none
		
	&__ul
		margin-left: 86px
		
		&__li
			display: inline-block
				
			&__bu
				color: white
				cursor: pointer
				display: block
				padding: 0.6em 1em
				white-space: nowrap
				letter-spacing: 1px
				font-stretch: condensed
				transition: all 100ms
				&:hover
					color: crgb(ccAmarillo2)
					transform : scale(1.1)
		
		&__sep
			color: white
			padding: 0.6em 0em
			display: inline-block
			
	&__subul
		display: none