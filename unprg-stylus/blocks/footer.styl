
@import "nib"

.bkfoo
	color: white
	padding: 30px 0px
	
	&__logo
		float: left
		display: inline-block
		width: 38%
		
		&__img
			display: inline-block
			vertical-align: middle
			img
				display: block
				height: auto
				vertical-align: middle
				width: 60px
		&__name
			display: inline-block
			margin-left: 16px
			vertical-align: middle
			&__2
				margin-top: 4px
				
		&__dir
			border-top: 1px solid crgb(ccGris2)
			margin-left: 82px
			padding-top: 15px
			display: inline-block
			&__l
				margin-bottom: 5px
				span
					display: inline-block
					width: 90px
	
	&__map
		display: inline-block
		float: left
		width: 24%
		&__t
			margin-bottom: 10px
			font-weight: bold
		a
			display: block
			img
				display: block
				width: 100%
				height: auto
			
	&__info
		display: inline-block
		float: left
		width: 38%
		text-align: right
		
		&__sep
			margin-bottom: 15px
			
			&:last-child
				margin-bottom: 0px
			
			&__t
				font-weight: bold
				margin-bottom: 8px
				font-family: font1
			&__d
				color: crgb(ccGris4)