@import "nib"
@import "../includes/config.styl"

.bklinks
	padding: 20px 0 0 0
	font-size: 0px
	
	&__wraper
		border-radius: 0.4em
		
	&__titulo
		padding-bottom: 0.2em
		border-bottom: 1px solid crgb(ccGris5)
		
	&__el
		padding: 1em
		display: inline-block
		font-size: 10px
		width: 33.33333333333%
		box-sizing: border-box
		border: 4px solid crgb(ccGris6)
		text-decoration: none
		border-radius: 8px
		text-align: left
		
		&__titulo
			padding-bottom: 0.2em
			overflow: hidden
			white-space: nowrap
			text-overflow: ellipsis
		&__texto
			overflow: hidden
			white-space: nowrap
			text-overflow: ellipsis