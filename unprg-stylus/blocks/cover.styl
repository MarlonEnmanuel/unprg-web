
@import "nib"

$__bu
	position: absolute
	margin: auto 0.6em
	color: crgba(ccGris3,0.5)
	font-size: 4em
	top: 0px
	bottom: 0px
	display: table
	transition: all 100ms
	&:hover
		color: crgba(ccGris3,0.9)
	span
		display: table-cell
		vertical-align: middle
		cursor: pointer

.bkcov
	position: relative
	
	&__bu
		&--prev
			@extend $__bu
			left: 0
		&--next
			@extend $__bu
			right: 0
	
	&__sl
		position: relative
		
		.owl-controls
			position: absolute
			left: 0px
			right: 0px
			bottom: 1em
				
		&__item
			overflow: hidden
			
			&__img
				display: inline-block
				width: 100%
				
			&__text
				color: white
				background: linear-gradient(to bottom,rgba(0,0,0,0) 0%,rgba(0,0,0,0.22) 17%,rgba(0,0,0,0.75) 57%,rgba(0,0,0,0.75) 88%,rgba(0,0,0,0.75) 100%)
				padding: 5% 0 5% 0
				position: absolute
				left: 0px
				right: 0px
				bottom: 0px
				a
					text-decoration: none
					color: crgb(ccAmarillo2)
				
				&__1
					margin-bottom: 0.6em
					text-transform: uppercase