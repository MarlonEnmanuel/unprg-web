
@import "nib"
@import "../includes/config.styl"

$__bu
	position: absolute
	margin: auto 0.6em
	color: crgba(ccGris3,0.5)
	font-size: 4em
	top: 0px
	bottom: 0px
	display: table
	transition: all 100ms
	&:hover
		color: crgba(ccGris3,0.9)
	span
		display: table-cell
		vertical-align: middle
		cursor: pointer
	@media all and (max-width: 600px)
		display: none
		
.bkcov
	position: relative
	@media all and (max-width: 600px)
		padding-top: 38px
	
	&__bu
		&--prev
			@extend $__bu
			left: 0
		&--next
			@extend $__bu
			right: 0
	
	&__sl
		position: relative
		
		.owl-controls
			position: absolute
			left: 0px
			right: 0px
			bottom: 1em
			.owl-pagination
				@media all and (max-width: 600px)
					display: none
				
		&__item
			overflow: hidden
			
			&__img
				position: relative
				width: 100%
				height: 0
				padding-bottom: 39.5%
				img
					position: absolute
					left: 0
					top: 0
					right: 0
					bottom: 0
					width: 100%
					height: 100%
				
			&__text
				color: white
				background: linear-gradient(to bottom,rgba(0,0,0,0) 0%,rgba(0,0,0,0.22) 17%,rgba(0,0,0,0.75) 57%,rgba(0,0,0,0.75) 88%,rgba(0,0,0,0.75) 100%)
				padding: 5% 0 5% 0
				position: absolute
				left: 0px
				right: 0px
				bottom: 0px
				a
					text-decoration: none
					color: crgb(ccAmarillo2)
					
				@media all and (max-width: 600px)
					position: static
					background: none
					background-color: crgb(ccAzul1)
					padding: 1.5em 0 1.5em 0
				
				&__1
					font-size: 34px
					margin-bottom: 0.6em
					text-transform: uppercase
					@media all and (max-width: 820px)
						font-size: 30px
					@media all and (max-width: 760px)
						font-size: 28px
					@media all and (max-width: 700px)
						font-size: 26px
					@media all and (max-width: 640px)
						font-size: 24px
					@media all and (max-width: 580px)
						font-size: 22px
					@media all and (max-width: 520px)
						font-size: 20px
					@media all and (max-width: 460px)
						font-size: 18px
					@media all and (max-width: 400px)
						font-size: 16px
				&__2
					font-size: 18px
					@media all and (max-width: 820px)
						font-size: 17px
					@media all and (max-width: 760px)
						font-size: 16px
					@media all and (max-width: 700px)
						font-size: 15px
					@media all and (max-width: 640px)
						font-size: 14px
					@media all and (max-width: 580px)
						font-size: 13px
					@media all and (max-width: 520px)
						font-size: 12px