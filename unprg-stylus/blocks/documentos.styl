
@import "nib"
@import "../includes/config.styl"

.bkdocs
	margin-top: 38px
	padding: 40px 0 0 0
	min-height: 350px
	
	@media all and (max-width: 620px)
		font-size: 9px
	
	&__group
		&__title
			padding-bottom: 0.2em
			margin-bottom: 0.5em
			border-bottom: 2px solid crgb(ccGris4)

		&__cont
			margin-bottom: 5em
			
	
	&__el
		display: block
		box-sizing: border-box
		margin-left: 3%
		cursor: pointer
		transition: background-color 150ms
		border-bottom: 1px solid crgb(ccGris5)
		font-size: 10px
		@media all and (max-width: 620px)
			font-size: 9px
		@media all and (max-width: 460px)
			font-size: 8px
			margin-left: 0
		&:after
		&:before
			content: ""
			display: block
			clear: both
			
		&:hover
			background-color: crgb(ccGris6)
			.bkdocs__el__nombre
				text-decoration: underline
		div
			height: 100%
			float: left
			box-sizing: border-box
			vertical-align: middle
			font-weight: bold
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis
		&__nombre
			padding: 0.8em 0.1em
			color : crgb(ccGris2)
			width: 66%
			font-size: 1.7em
			vertical-align: middle
			font-stretch: condensed
			a
				text-decoration: none
		&__fecha
			color : crgb(ccAzul3)
			width: 15%
			font-size: 1.4em
			padding: 1.18em 0.1em
		&__tipo
			color : crgb(ccGris2)
			width: 19%
			font-size: 1.4em
			padding: 1.18em 0.1em