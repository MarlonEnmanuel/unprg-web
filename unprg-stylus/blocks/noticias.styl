
@import "nib"
@import "../includes/config.styl"

.bknoti
	margin-top: 38px
	padding: 4em 0
	min-height: 350px
	
	&__titulo
		display: block
		margin-bottom: 20px
	
	&__cont
		font-size: 0px
		
	
	&__el
		display: inline-block
		width: 25%
		box-sizing: border-box
		font-size: 10px
		vertical-align: top
		padding: 1em
		
		@media all and (max-width: 1100px)
			width: 33.3333333%
		@media all and (max-width: 800px)
			width: 50%
			padding: 1em 0.9em
		@media all and (max-width: 560px)
			font-size: 9px
			padding: 1em 0.8em
		@media all and (max-width: 460px)
			width: 100%
			padding: 1em 0
		
		&__wraper
			box-shadow: 0 0 6px 0 crgb(ccGris1)
			background-color: crgb(ccAzul2)
			transition: all 200ms
				
			&:hover .bknoti__el__port__img
				transform: scale(1.1)
				
				
		&__port
			position: relative
			overflow: hidden
			
			&__icon
				display: none
				position: absolute
				top: 0
				right: 0
				z-index: 1
				font-size: 1.6em
				color: crgb(ccAmarillo2)
				padding: 0.3em 0.3em 0.8em 0.8em
				background-color: crgba(ccAzul1, 0.8)
				border-radius: 0 0 0 5em
		
			&__img
				display: block
				width: 100%
				height: auto
				transition: all 300ms
				
			&__titulo
				padding: 5% 4% 4% 4%
				position: absolute
				left: 0
				right: 0
				bottom: 0
				font-size: 1.8em
				color: white
				font-weight: bold
				font-stretch: condensed
				letter-spacing: 0.0555555555555556em
				background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(0,0,0,0.30) 35%)

		
		&__texto
			margin: 4%
			font-size: 1.5em
			color: white
			line-height: 1.3em
			max-height: 7.7em
			overflow: hidden
		
		&__pie
			padding: 0 4% 4% 4%
			margin-top: -4%
			&:before
			&:after
				content: ""
				display: block
				clear: both
				
			&__over
				font-size: 1.8em
				color: white
				margin-top: -0.2em
				display: inline-block
			&__fecha
				padding-top: 4%
				font-size: 1.4em
				color: crgb(ccAmarillo2)
				float: right
				font-weight: bold
			

	.destacado
		background-color: crgb(ccAzul1)
		.bknoti__el
			&__port
				&__icon
					display: block
			&__texto
				max-height: 10.3em