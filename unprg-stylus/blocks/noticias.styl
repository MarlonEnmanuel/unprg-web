
@import "nib"
@import "../includes/config.styl"

.bknoti
	margin-top: 38px
	padding: 4em 0
	min-height: 350px
	
	&__titulo
		display: block
		margin-bottom: 20px
		padding: 0 0.5%
		@media all and (max-width: 460px)
			padding: 0
	
	&__el
		display: inline-block
		width: 25%	
		padding: 0.5%
		box-sizing: border-box
		vertical-align: top
		
		@media all and (max-width: 1100px)
			width: 33.3333333%
		@media all and (max-width: 800px)
			width: 50%
		@media all and (max-width: 560px)
			font-size: 9px
		@media all and (max-width: 460px)
			width: 100%
			padding: 1em 0
		
		&__wraper
			border: 1px solid crgb(ccGris4)
				
			&:hover .bknoti__el__port__img
				transform: scale(1.1)
				
				
		&__port
			position: relative
			width: 100%
			height: 0
			padding-bottom: 46%
			overflow: hidden
			
			&__icon
				display: none
				position: absolute
				top: 0
				right: 0
				z-index: 1
				font-size: 1.8em
				color: crgb(ccAmarillo2)
				padding: 0.4em 0.4em 0.9em 0.9em
				background-color: crgba(ccGris1, 0.9)
				border-radius: 0 0 0 5em
		
			&__img
				position: absolute
				left: 0
				top: 0
				right: 0
				bottom: 0
				width: 100%
				height: 100%
				transition: all 300ms
				
			&__fecha
				position: absolute
				bottom: 1em
				right: 1em
				text-shadow: 0 0 1px white
				
		&__body
			padding: 1em
			
			&__titulo
				margin-bottom: 0.3em
				padding-bottom: 0.3em
			&__texto
				line-height: 1.35em
				max-height: 5.4em
				overflow: hidden
			&__over
				margin-top: -0.3em
				float: left
			&__ver
				padding: 0.4em
				display: inline-block
				border-radius: 3px
				cursor: pointer
				box-shadow: 0 0 2px 0 black
				margin-top: 0.5em
				&:hover
					opacity: 0.8
			
	.destacado
		box-shadow: 0 0 0.8em 0 rgba(0,0,0,0.5)
		.bknoti__el
			&__port
				&__icon
					display: inline-block
			&__body
				font-size: 1.2em
				&__titulo
					margin-bottom: 0.3em
					padding-bottom: 0.3em
				&__texto
					line-height: 1.35em
					max-height: 6.75em