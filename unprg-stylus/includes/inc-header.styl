@import "nib"

header
	background-color: ccAzulOscuro
	font-size: 0px
	text-align: center
	cursor: default
	
	.wraper
		padding: 0px 0px
		margin-left: 4%
		margin-right: 4%
		position: relative
	
	.unprg-home
		text-align: left
		padding-top: 20px
		padding-bottom: 20px
		
		.unprg-logo
			display: inline-block
			float: left
			vertical-align: middle
			width: auto
			img
				display: block
				width: 110px
				height: auto
		.unprg-titulo
			color: white
			display: inline-block
			margin-left: 16px
			padding: 30px 0px 10px 0px
			vertical-align: middle
			h2
				font-size: 14px
				font-weight: bold
			h1
				margin: 0px
				margin-top: 10px
				font-family: font2
				font-size: 32px
				font-weight: normal
				
	.unprg-enlaces
		float: right
		text-align: right
		font-size: 14px
		position: absolute
		top: 20px
		right: 0px
		
		a
			display: inline-block
			color: white
			padding: 0px 10px
			text-decoration: none
			transition: all 0.2s
			&:hover
				text-decoration: underline
			&:last-child
				padding-right: 0px
			&:not(:first-child)
				border-left: 1px solid white
	
	.unprg-botones
		bottom: 0px
		font-size: 0px
		position: absolute
		right: 0px
		
		a
			background-color: ccAmarillo
			color: ccAzulOscuro
			font-weight: bold
			font-size: 14px
			display: inline-block
			padding: 12px 18px
			text-decoration: none
			transition: all 200ms
			&:hover
				background-color: ccAzul
				color: white
			

	@media screen and (max-width: 870px)
		.unprg-home
			.unprg-logo
				float: none